%h1 Editing arquivo
- form_for(@arquivo) do |f|
  = f.error_messages
  %p
    = f.label :nome
    %br/
    = f.text_field :nome
  %p
    = f.label :pasta
    %br/
    = f.text_field :pasta
  %p
    = f.label :tamanho
    %br/
    = f.text_field :tamanho
  %p
    = f.label :torrent_id
    %br/
    = f.text_field :torrent_id
  %p
    = f.submit 'Update'
= link_to 'Show', @arquivo
|
\#{link_to 'Back', arquivos_path}
